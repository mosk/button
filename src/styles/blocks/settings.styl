.settings
	fieldset
		display flex
		flex-wrap wrap
		margin 0
		margin-bottom 20px
		padding 0
		border none
	.title
		margin-bottom 10px
		font-size 24px
		color #cccccc
		font-weight 700
	.label
		display block
		width 100%
		margin 0
		margin-bottom 4px
		color #444444
	.input
		display block
		width 100%
		margin 0
		margin-bottom 10px
		padding 8px 0px 10px
		color #dddddd
		border none
		border-bottom 1px solid transparent
		background transparent
		background-color transparent
		transition border-color 0.6s, color 0.6s
		&:hover,
		&:active,
		&:focus
			color #222222
			border-bottom-color #222222
			outline none
			transition border-color 0.6s, color 0.6s