.settings
	fieldset
		display flex
		flex-wrap wrap
		margin 0
		margin-bottom 20px
		padding 0
		border none
	.title
		margin-bottom 10px
		font-size 24px
		color #cccccc
		font-weight 700
	.label
		display block
		width 100%
		margin 0
		margin-bottom 4px
		color #444444
	.input
		display block
		width 100%
		margin 0
		margin-bottom 10px
		padding 8px 0px 10px
		color #dddddd
		border none
		border-bottom 1px solid transparent
		background transparent
		background-color transparent
		transition border-color 0.6s, color 0.6s
		&:hover,
		&:active,
		&:focus
			color #222222
			border-bottom-color #222222
			outline none
			transition border-color 0.6s, color 0.6s
		&--checkbox
			visibility hidden
			position relative
			margin-top 8px
			cursor pointer
			&:before
				display block
				position absolute
				content ''
				width 20px
				height 20px
				left 0
				top 0
				visibility visible
				background-color transparent
				border 1px solid #e5e5e5
			&:after
				display none
				position absolute
				content ''
				width 10px
				height 5px
				left 6px
				top 6px
				visibility visible
				border-left 1px solid #000
				border-bottom 1px solid #000
				transform: rotate(-45deg)
		&--checkbox:checked
			&:after
				display block
